<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>HSBCWebApp</display-name>
  
  <servlet>
  	<servlet-name>HelloWorld</servlet-name>
  	<servlet-class>com.hsbc.HelloWorldServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>HelloWorld</servlet-name>
  	<url-pattern>/helloworld</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>processname</servlet-name>
  	<servlet-class>com.hsbc.ProcessNameServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>processname</servlet-name>
  	<url-pattern>/processName</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>add</servlet-name>
  	<servlet-class>com.hsbc.AdditionServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>add</servlet-name>
  	<url-pattern>/add</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>interest</servlet-name>
  	<servlet-class>com.hsbc.InterestServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>interest</servlet-name>
  	<url-pattern>/interest</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.hsbc.ValidateServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>checkbox</servlet-name>
  	<servlet-class>com.hsbc.CheckboxServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>checkbox</servlet-name>
  	<url-pattern>/checkbox</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>book</servlet-name>
  	<servlet-class>com.hsbc.BookServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>book</servlet-name>
  	<url-pattern>/book</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>input</servlet-name>
  	<servlet-class>com.hsbc.UserInputServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>input</servlet-name>
  	<url-pattern>/input</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>